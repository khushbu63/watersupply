<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.watersupply.Navigationdrawer"
    tools:showIn="@layout/app_bar_navigationdrawer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/info" />

            <TextView
                android:id="@+id/infotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:text="Information"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/payment"
                android:layout_below="@+id/info"
                android:layout_marginTop="@dimen/_70sdp"/>

            <TextView
                android:id="@+id/paymenttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:text="Payment"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_200sdp"
                android:background="@drawable/order" />

            <TextView
                android:id="@+id/ordertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order"
                android:layout_marginLeft="@dimen/_200sdp"
                android:text="Order"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/bill"
                android:layout_below="@+id/order"/>

            <TextView
                android:id="@+id/billtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill"
                android:layout_marginLeft="@dimen/_220sdp"
                android:text="Bill"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_200sdp"
                android:background="@drawable/query" />

            <TextView
                android:id="@+id/querytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/query"
                android:layout_marginLeft="@dimen/_200sdp"
                android:text="@string/query"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />




            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_200sdp"
                android:background="@drawable/map_location" />

            <TextView
                android:id="@+id/locationtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_gravity="center"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
